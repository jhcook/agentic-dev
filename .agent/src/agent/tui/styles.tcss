/* ─── Main Screen: Vertical stack ─── */

Screen {
    layout: vertical;
    background: $surface;
}

/* ─── Top Area: Chat + Sidebar ─── */

#main-area {
    layout: horizontal;
    height: 1fr;
}

#chat-container {
    width: 3fr;
    height: 100%;
    border: round $primary;
    background: $surface;
}

#chat-output {
    width: 100%;
    height: 100%;
    scrollbar-size: 1 1;
    padding: 0 1;
}

/* ─── Sidebar ─── */

#sidebar {
    layout: vertical;
    width: 1fr;
    height: 100%;
    max-width: 32;
}

#workflow-panel {
    height: 1fr;
    border: round $secondary;
    background: $surface;
}

#workflow-panel > Static {
    color: $text;
    text-style: bold;
    padding: 0 1;
    background: $secondary;
}

#role-panel {
    height: 1fr;
    border: round $secondary;
    background: $surface;
}

#role-panel > Static {
    color: $text;
    text-style: bold;
    padding: 0 1;
    background: $secondary;
}

#workflow-list, #role-list {
    height: 1fr;
    padding: 0 1;
    scrollbar-size: 1 1;
}

/* ─── Bottom: Status + Input ─── */

#status-bar {
    width: 100%;
    height: 1;
    background: $primary;
    color: $text;
    padding: 0 1;
    text-style: bold;
}

#input-box {
    width: 100%;
    border: round $primary;
    background: $boost;
    padding: 0 1;
}
